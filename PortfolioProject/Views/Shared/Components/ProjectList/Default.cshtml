@using EntityLayer.Concrete
@model List<Portfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div>#</div>
                                </th>
                                <th> Proje Adı </th>
                                <th> Proje </th>
                                <th> Fiyat </th>


                                <th> Tamamlanma</th>
                                <th> Durum </th>
                                <th> Detay </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>
                                        <div>#</div>
                                    </td>
                                    <td>
                                        <img src="@item.Platform" alt="image" />
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td> <a href="@item.ProjectUrl">Projeyi İncele</a> </td>
                                    <td> @item.Price </td>
                                    <td> @item.Value % </td>

                                    <td>
                                        @if (item.Value==100)
                                        {
                                            <div class="badge badge-outline-success">Tamamlandı</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-outline-warning">Devam Ediyor</div>
                                        }
                                    </td>

                                    <td> <a type="submit" class="btn btn-outline-secondary" asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-id="@item.PortfolioId">Detay İncele</a></td>
                                </tr>




                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
