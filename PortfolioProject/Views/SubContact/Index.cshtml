@using EntityLayer.Concrete
@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <form class="forms-sample" method="post">

                <div class="form-group">
                    <h3>Alt İletişim Bilgileri Güncelleme Paneli</h3>
                    <input type="hidden" class="form-control" id="exampleInputName1" placeholder="Id" asp-for="ContactId">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Title" asp-for="Title">
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Açıklama" asp-for="Description">
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputPassword4">Yaş</label>
                    <input type="text" class="form-control" id="exampleInputPassword4" asp-for="Mail">
                </div>
                <br />

                <div class="form-group">
                    <label for="exampleInputPassword4">Telefon Numarası</label>
                    <input type="text" class="form-control" id="exampleInputPassword4" asp-for="Phone" placeholder="Phone Number">
                </div>
                <br />


                <button type="submit" class="btn btn-primary mr-2">Güncellemeyi Kaydet</button>

            </form>
        </div>
    </div>
</div>

