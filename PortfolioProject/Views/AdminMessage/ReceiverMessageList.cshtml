@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Gelen Kutusu</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.SenderName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date</td>
                                <td><a asp-controller="AdminMessage" asp-action="AdminMessageDeleteReceiver" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a asp-controller="AdminMessage" asp-action="AdminMessageDetail" asp-route-id="@item.Id" class="btn btn-outline-warning">Mesajı Gör</a></td>




                            </tr>
                        }


                    </tbody>
                </table>

            </div>

        </div>

    </div>


</div>


