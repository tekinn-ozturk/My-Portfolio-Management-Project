@using EntityLayer.Concrete
@model Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Mesaj Detay Sayfası</h4>



            <div class="form-group">
               
                <input type="hidden" class="form-control" id="exampleInputName1" placeholder="Id" asp-for="MessageId">
            </div>

            <div class="form-group">
                
                <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" asp-for="Name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">E-Posta</label>
                <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Date" asp-for="Mail">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Tarih</label>
                <input type="text" class="form-control" id="exampleInputPassword4" asp-for="Date" placeholder="image path">
            </div>

            <div class="form-group">
                <label for="exampleTextarea1">Mesaj İçeriği</label>
                <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Content"></textarea>
            </div>
            <a type="submit" class="btn btn-primary mr-2" asp-controller="Contact" asp-action="Index" >İletişim Sayfasına Geri Dön</a>


        </div>
    </div>
</div>


