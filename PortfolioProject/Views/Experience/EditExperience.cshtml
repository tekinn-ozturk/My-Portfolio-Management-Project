@using EntityLayer.Concrete
@model Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
    @* hidden olarak id eklenmezse güncelleme yapılmıyor. Direkt add işlemi yapılıyor.  *@
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Deneyim Ekleme Sayfası</h4>

            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Deneyim Başlığı</label>
                    <input type="hidden" class="form-control" id="exampleInputName1" placeholder="Id" asp-for="ExperienceId">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Deneyim Başlığı</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Date" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Görsel Yolu</label>
                    <input type="text" class="form-control" id="exampleInputPassword4" asp-for="ImageUrl" placeholder="image path">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncellemeyi Kaydet</button>

            </form>
        </div>
    </div>
</div>

