@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@* <div class="card-header border-0">
    <h3 class="mb-0">Deneyimler Listesi Tablosu</h3>
</div> *@

<!-- Light table -->
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler Tablosu</h4>
            <p class="card-description">
               
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kurum Adı</th>
                            <th>Görevi</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceId</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a asp-controller="Experience" asp-action="DeleteExperience" asp-route-id="@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a asp-controller="Experience" asp-action="EditExperience" asp-route-id="@item.ExperienceId" class="btn btn-outline-warning">Güncelle</a></td>
                                
                                
                               
                            </tr>
                        }
                        
                       
                    </tbody>
                </table>
                
            </div>
            
        </div>
        
    </div>
   

</div>
<div><a asp-controller="Experience" asp-action="AddExperience" class="btn btn-outline-success ml-2">Deneyim Ekle</a></div>




